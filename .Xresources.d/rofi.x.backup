! ------------------------------------------------------------------------------
! ROFI General Settings
! ------------------------------------------------------------------------------
rofi.color-enabled: true
rofi.modi: window,run,ssh
rofi.columns: 1
rofi.font: xos4 Terminus 11
rofi.separator-style: none
rofi.hide-scrollbar: true
rofi.width: 350
rofi.lines: 4
rofi.eh: 1
rofi.padding: 0
rofi.bw: 20

! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
!rofi.color-window: #273238, #273238, #1e2529
